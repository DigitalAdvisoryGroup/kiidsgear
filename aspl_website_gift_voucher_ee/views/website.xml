<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="aspl_website_gift_voucher_view_form" model="ir.ui.view">
            <field name="name">res.config.settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="website.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="sale_checkout_settings" position="after">
                    <h2>Gift Voucher</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="gift_voucher" class="o_light_label"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label class="o_form_label" for="gift_voucher"></label>
                                <div class="text-muted">
                                    Enable Gift Voucher
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box"
                             attrs="{'invisible':[('gift_voucher','=',False)]}">
                            <div class="o_setting_left_pane">
                                <field name="child_cate" class="o_light_label"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label class="o_form_label" for="child_cate" string="Child Category"></label>
                                <div class="text-muted">
                                    Enable Discount For Child Category
                                </div>

                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box"
                             attrs="{'invisible':[('gift_voucher','=',False)]}">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label class="o_form_label" for="voucher_show_option"></label>
                                <div class="text-muted">
                                    Voucher display options
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="voucher_show_option" class="o_light_label" widget="radio"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-12 col-md-6 o_setting_box"
                             attrs="{'invisible':[('voucher_show_option','=','slider')]}">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label class="o_form_label" for="voucher_notification_show"></label>
                                <div class="text-muted">
                                    Display Notification On
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="voucher_notification_show" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box"
                             attrs="{'invisible':['|',('voucher_notification_show','=','pageload'),('voucher_show_option','=','slider')]}">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label class="o_form_label" for="interval_time"></label>
                                <div class="text-muted">
                                    Interval Time
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="interval_time" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box"
                             attrs="{'invisible':[('voucher_show_option','=','slider')]}">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label class="o_form_label" for="delay_time"></label>
                                <div class="text-muted">
                                    Delay Time
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="delay_time" class="o_light_label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>